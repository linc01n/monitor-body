= form_for @height do |f|
  - if @height.errors.any?
    #error_explanation
      %h2= "#{pluralize(@height.errors.count, "error")} prohibited this height from being saved:"
      %ul
        - @height.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :cm
    = f.text_field :cm
  .actions
    = f.submit 'Save'
